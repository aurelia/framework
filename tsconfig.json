{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "moduleResolution": "node",
    "stripInternal": true,
    "preserveConstEnums": true,
    "listFiles": true,
    "declaration": true,
    "removeComments": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "doc",
    "test",
    "config.js",
    "gulpfile.js",
    "karma.conf.js"
  ]
}
